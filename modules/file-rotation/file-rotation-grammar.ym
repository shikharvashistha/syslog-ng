%code top {
#include "file-rotation-parser.h"

}


%code {

#include "cfg-grammar-internal.h"
#include "cfg-parser.h"
#include "syslog-names.h"
#include "messages.h"
#include "plugin.h"
#include "driver.h"
#include "file-rotation.h"

#include <string.h>

FileRotationPlugin *last_file_rotation_plugin;

}

%define api.prefix {file_rotation_}

/* this parameter is needed in order to instruct bison to use a complete
 * argument list for yylex/yyerror */

%lex-param {CfgLexer *lexer}
%parse-param {CfgLexer *lexer}
%parse-param {LogDriverPlugin **instance}
%parse-param {gpointer arg}

/* INCLUDE_DECLS */

%token KW_FILE_ROTATION
%token KW_SIZE

%%

start
  : LL_CONTEXT_INNER_DEST file_rotation { YYACCEPT; }
  ;

file_rotation
  : KW_FILE_ROTATION
    {
      last_file_rotation_plugin = file_rotation_new();
      *instance = (LogDriverPlugin *) last_file_rotation_plugin;
    }
    '(' file_rotation_options ')'
  ;

file_rotation_options
  : file_rotation_option file_rotation_options
  |
  ;

file_rotation_option
  : KW_SIZE '(' nonnegative_integer ')' { file_rotation_set_size(last_file_rotation_plugin, $3); }
  ;

/* INCLUDE_RULES */

%%
